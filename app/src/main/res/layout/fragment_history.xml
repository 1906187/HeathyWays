<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BFA5"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

            >

         <ImageView
             android:id="@+id/imgBmi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_bmi"
             android:padding="10dp"
             android:layout_marginTop="16dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI History"
            android:layout_toRightOf="@+id/imgBmi"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvIW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2962FF"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:layout_below="@id/cvBMI"
        android:elevation="20dp"
        >

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgIW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exercise1"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ideal Weight History"
                android:layout_toRightOf="@+id/imgIW"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvFat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF6D00"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:layout_below="@id/cvIW"
        android:elevation="20dp"
        >

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fat"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat Calculator History"
                android:layout_toRightOf="@+id/imgFat"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvORMHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0A9F48"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:layout_below="@id/cvFat"
        android:elevation="20dp"
        >

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img1RM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_deadlift"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Rep Max History"
                android:layout_toRightOf="@+id/img1RM"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cvBMRHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFAB00"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:layout_below="@id/cvORMHistory"
        android:elevation="20dp"
        >

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgBMR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fire"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMR &amp; TDEE History"
                android:layout_toRightOf="@+id/imgBMR"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D5538D"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:layout_below="@id/cvBMRHistory"
        android:elevation="20dp"
        >

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgGC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_goal"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Calculator History"
                android:layout_toRightOf="@+id/imgGC"
                android:textSize="26sp"
               android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    </LinearLayout>
  </ScrollView>
</RelativeLayout>